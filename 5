#include "stdafx.h"
#include "iostream"
using namespace std;

int main()
{
	setlocale(LC_ALL, "ru");
	int n,c1=0,p=1,c2=0,s2=0,p3=1,c3=0,s4=0,c4=0;
	cin >> n;
	int **m = new int*[n];
	for (int i = 0; i < n; i++){
		m[i] = new int[n];
	}
	for (int i = 0; i < n; i++){
		for (int j = 0; j < n; j++){
			cin >> m[i][j];
		}
	}
	int max = m[0][0], min = m[0][0];
	for (int i = 0; i < n; i++){
		for (int j = 0; j < n; j++){
			if (i > j){
				p *= m[i][j];
				c1++;
				if (m[i][j]>0){
					p3 *= m[i][j];
					c3++;
				}
			}
			if (i < j){
				s2 += m[i][j];
				c2++;
				if (m[i][j] < 0){
					s4 += m[i][j];
					c4++;
				}
			}
			cout << "[" << i << "][" << j << "]= " << m[i][j] << "\t";
		}
		cout << endl;
	}
	cout << "1) Произведение элементов под гл. диаганалью: " << p << ", кол-во элементов под гл. диаганалью: " << c1 << endl;
	cout << "2) Сумма элементов матрицы над гл. диаганалью: " << s2 << ", кол-во элементов над гл. диаганалью: " << c2 << endl;
	cout << "3) Произведение положительных элементов матрицы под гл. диаганалью: " << p3 << ", кол-во положительных элементов под гл. диаганалью: " << c3 << endl;
	cout << "4) Сумма отрицательных элементов над гл. диаганалью: " << s4 << ", кол-во отрицательных элементов над гл. диаганалью: " << c4 << endl;

	for (int i = 0; i < n; i++){
		delete[]m[i];
	}
	delete[]m;
	return 0;
}
