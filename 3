#include "stdafx.h"
#include "iostream"
using namespace std;


int main()
{
	setlocale(LC_ALL, "ru");
	int n,m,s,p;
	cin >> n;
	cin >> m;
	int *mat_s = new int[n];
	int *mat_p = new int[n];
	int **mat = new int*[m];
	for (int i = 0; i < m; i++){
		mat[i] = new int[n];
	}
	for (int i = 0; i < m; i++){
		for (int j = 0; j < n; j++){
			cin >> mat[i][j];
		}
	}
	for (int i = 0; i < m; i++){
		s = 0;
		p = 1;
		for (int j = 0; j < n; j++){
			s += mat[i][j];
			p *= mat[i][j];
			cout << "[" << i << "][" << j << "]= " << mat[i][j] << "\t";
		}
		mat_s[i] = s;
		mat_p[i] = p;
		cout << endl;
	}
	for (int i = 0; i < m; i++){
		cout << mat_s[i] << " " << mat_p[i] << endl;
	}
	for (int i = 0; i < n; i++){
		delete[]mat[i];
	}
	delete[]mat;
	return 0;
}
